@page "/equipment"
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>Equipment</PageTitle>

<h1>Equipment</h1>

<div class="container ms-0">
    <div class="row">
        <div class="col">
            <h6 style="color: #ebd494">@player.SelectedSlot</h6>
            <h6>@player.SelectedItem.Name</h6>
            <div class="container p-0">
                <div class="row p-0">
                    <ItemSlot DefaultItemID="Unarmed" SlotType="Weapon" SlotName="Right Hand Armament 1" ImgSource="/assets/Icons/Menu/MainHandSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="Unarmed" SlotType="Weapon" SlotName="Right Hand Armament 2" ImgSource="/assets/Icons/Menu/MainHandSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="Unarmed" SlotType="Weapon" SlotName="Right Hand Armament 3" ImgSource="/assets/Icons/Menu/MainHandSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="None" SlotType="Ammo" SlotName="Arrow 1" ImgSource="/assets/Icons/Menu/ArrowSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="None" SlotType="Ammo" SlotName="Arrow 2" ImgSource="/assets/Icons/Menu/ArrowSlot.png"></ItemSlot>
                </div>
                <div class="row p-0">
                    <ItemSlot DefaultItemID="Unarmed" SlotType="Weapon" SlotName="Left Hand Armament 1" ImgSource="/assets/Icons/Menu/OffHandSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="Unarmed" SlotType="Weapon" SlotName="Left Hand Armament 2" ImgSource="/assets/Icons/Menu/OffHandSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="Unarmed" SlotType="Weapon" SlotName="Left Hand Armament 3" ImgSource="/assets/Icons/Menu/OffHandSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="None" SlotType="Ammo" SlotName="Bolt 1" ImgSource="/assets/Icons/Menu/BoltSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="None" SlotType="Ammo" SlotName="Bolt 2" ImgSource="/assets/Icons/Menu/BoltSlot.png"></ItemSlot>
                </div>
                <div class="row p-0">
                    <ItemSlot DefaultItemID="None" SlotType="Talisman" SlotName="Talisman 1" ImgSource="/assets/Icons/Menu/TalismanSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="None" SlotType="Talisman" SlotName="Talisman 2" ImgSource="/assets/Icons/Menu/TalismanSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="None" SlotType="Talisman" SlotName="Talisman 3" ImgSource="/assets/Icons/Menu/TalismanSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="None" SlotType="Talisman" SlotName="Talisman 4" ImgSource="/assets/Icons/Menu/TalismanSlot.png"></ItemSlot>
                </div>
                <div class="row p-0">
                    <ItemSlot DefaultItemID="None" SlotType="Magic" SlotName="Spell Slot 1" ImgSource="/assets/Icons/Menu/SpellSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="None" SlotType="Magic" SlotName="Spell Slot 2" ImgSource="/assets/Icons/Menu/SpellSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="None" SlotType="Magic" SlotName="Spell Slot 3" ImgSource="/assets/Icons/Menu/SpellSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="None" SlotType="Magic" SlotName="Spell Slot 4" ImgSource="/assets/Icons/Menu/SpellSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="None" SlotType="Magic" SlotName="Spell Slot 5" ImgSource="/assets/Icons/Menu/SpellSlot.png"></ItemSlot>
                </div>
                <div class="row p-0">
                    <ItemSlot DefaultItemID="None" SlotType="Magic" SlotName="Spell Slot 6" ImgSource="/assets/Icons/Menu/SpellSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="None" SlotType="Magic" SlotName="Spell Slot 7" ImgSource="/assets/Icons/Menu/SpellSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="None" SlotType="Magic" SlotName="Spell Slot 8" ImgSource="/assets/Icons/Menu/SpellSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="None" SlotType="Magic" SlotName="Spell Slot 9" ImgSource="/assets/Icons/Menu/SpellSlot.png"></ItemSlot>
                    <ItemSlot DefaultItemID="None" SlotType="Magic" SlotName="Spell Slot 10" ImgSource="/assets/Icons/Menu/SpellSlot.png"></ItemSlot>
                </div>
            </div>
        </div>
    </div>
</div>


@code {
    protected override void OnInitialized()
    {
        player.ValuesChanged += () => StateHasChanged();
    }

    [CascadingParameter]
    public Player player { get; set; }

    void IDisposable.Dispose()
    {
        player.ValuesChanged -= () => StateHasChanged();
    }
}
